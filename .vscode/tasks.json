{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"group": "build",
			"command": "make",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent",
				"close": true,
				"revealProblems": "onProblem"
			},
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make",
			"args": [
				"clean",
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		},
		{
			"label": "FClean",
			"type": "shell",
			"command": "make",
			"args": [
				"fclean",
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"close": true
			}
		}
	]
}
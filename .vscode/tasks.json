{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug",
			"type": "shell",
			"group": "build",
			"command": "make",
			"args": [
				"debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Build Release",
			"type": "shell",
			"group": "build",
			"command": "make",
			"args": [
				"all"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make",
			"args": [
				"clean",
				"cleandebug",
				"cleandebugexe",
				"cleanbuild"
			],
			"presentation": {
				"close": true
			}
		},
		{
			"label": "FClean",
			"type": "shell",
			"command": "make",
			"args": [
				"fclean",
				"fcleandebug",
				"cleanbuild"
			],
			"presentation": {
				"close": true
			},
		}
	]
}